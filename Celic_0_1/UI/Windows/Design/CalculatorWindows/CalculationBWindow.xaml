<Window x:Class="Celic.CalculationBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Celic"
        d:DataContext="{d:DesignInstance Type=local:CalculationBViewModel}"
        mc:Ignorable="d"
        FontSize="14"
        Title="Расчет высоты зоны водопроводящих трещин"
        MinHeight="500"
        MinWidth="600">
    <DockPanel>
        <local:PlastMenu DockPanel.Dock="Top"/>
        <local:PlastListBox Margin="4,0"
                            DockPanel.Dock="Left"
                            Itemsource="{Binding Plasts}"
                            SelectedItem="{Binding SelectedPlast}"/>
        <local:PlastDataBox x:Name="selected"/>
    </DockPanel>
</Window>