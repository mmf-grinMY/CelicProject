<Window x:Class="Celic.CalculationDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Celic"
        d:DataContext="{d:DesignInstance Type=local:CalculationDViewModel}"
        mc:Ignorable="d"
        Title="Расчет междубурьерных целиков"
        MaxHeight="384"
        MinHeight="344">
    <DockPanel>
        <local:PlastMenu DockPanel.Dock="Top"/>
        <local:PlastListBox DockPanel.Dock="Left" 
                            Itemsource="{Binding LeftPlasts}"
                            SelectedItem="{Binding LeftPlastSelected}"/>
        <StackPanel VerticalAlignment="Top"
                    Margin="4,0,0,0">
            <local:PlastDataBox x:Name="selected"
                                DataContext="{Binding SelectedPlast}"/>
            <Button HorizontalAlignment="Center"
                    Margin="4"
                    Content="Поменять местами"
                    Command="{Binding SwapCommand}"/>
        </StackPanel>
        <local:PlastListBox DockPanel.Dock="Right"
                            Itemsource="{Binding RightPlasts}"
                            SelectedItem="{Binding RightPlastSelected}"/>
    </DockPanel>
</Window>