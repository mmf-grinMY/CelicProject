<UserControl x:Class="Celic.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celic"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="316.8">
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="textBlock"
                   Width="200"
                   Margin="2,0,0,0"
                   FontSize="14"
                   Padding="0,1,0,0"
                   Text="{Binding ElementName=control, Path=BlockText}"/>
        <TextBox x:Name="textBox"
                 Width="100"
                 Margin="10,2,4,2"
                 FontSize="14"
                 Text="{Binding ElementName=control, Path=BoxText}"/>
    </StackPanel>
</UserControl>
