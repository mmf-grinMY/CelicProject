<UserControl x:Class="Celic.WPF.UserControls.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celic.WPF.UserControls"
             mc:Ignorable="d"
             x:Name="main">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock TextAlignment="Right"
                   Text="{Binding ElementName=main, Path=Text}"
                   FontSize="14"
                   MinWidth="100"
                   MaxWidth="400"
                   TextWrapping="WrapWithOverflow"/>
        <TextBox Grid.Column="1"
                 MinWidth="50"
                 MaxWidth="200"
                 MaxHeight="24"
                 FontSize="14"
                 Text="{Binding ElementName=main, Path=TextBoxText, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Margin="10,2,4,2"/>
    </Grid>
</UserControl>
